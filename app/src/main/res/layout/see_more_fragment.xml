<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.octagon_technologies.sky_weather.utils.Units" />

        <import type="com.octagon_technologies.sky_weather.utils.WindDirectionUnits" />

        <import type="com.xwray.groupie.GroupAdapter" />

        <import type="com.xwray.groupie.GroupieViewHolder" />

        <import type="com.octagon_technologies.sky_weather.repository.network.single_forecast.SingleForecast" />

        <variable
            name="singleForecast"
            type="com.octagon_technologies.sky_weather.repository.network.single_forecast.SingleForecast" />

        <variable
            name="windDirectionUnits"
            type="com.octagon_technologies.sky_weather.utils.WindDirectionUnits" />

        <variable
            name="groupAdapter"
            type="GroupAdapter&lt;GroupieViewHolder&gt;" />

        <variable
            name="units"
            type="com.octagon_technologies.sky_weather.utils.Units" />

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:paddingBottom="@dimen/_24sdp"
        android:theme="@style/AppTheme.WhiteTextColor"
        tools:background="@color/dark_theme_blue"
        tools:context=".ui.see_more_current.SeeMoreFragment">


        <ImageView
            android:id="@+id/see_more_weather_image"
            addObservationTime="@{singleForecast.observationTime}"
            getWeatherIconFrom="@{singleForecast.weatherCode}"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_28sdp"
            android:contentDescription="@string/weather_image_content_description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_layout"
            tools:src="@drawable/sun" />

        <TextView
            android:id="@+id/see_more_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:fontFamily="@font/coda"
            android:text="@{singleForecast.temp.value == null ? `--°` : String.valueOf(singleForecast.temp.value.intValue()) + `°`}"
            android:textSize="@dimen/_40ssp"
            app:layout_constraintBottom_toBottomOf="@+id/see_more_weather_image"
            app:layout_constraintStart_toEndOf="@+id/see_more_weather_image"
            app:layout_constraintTop_toTopOf="@+id/see_more_weather_image"
            tools:text="16°" />

        <TextView
            android:id="@+id/see_more_temp_units"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/coda"
            android:text="@{units == Units.IMPERIAL ? `F` : `C`}"
            android:textColor="@color/light_grey"
            android:textSize="@dimen/_18ssp"
            app:layout_constraintBottom_toBottomOf="@+id/see_more_temp"
            app:layout_constraintEnd_toEndOf="@+id/see_more_temp"
            tools:text="@string/temp_unit_C" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/see_more_description_recyclerview"
            addSeeMoreAdapter="@{groupAdapter}"
            addUnitSystemToSeeMore="@{units}"
            addWindDirectionToSeeMore="@{windDirectionUnits}"
            getCurrentConditionsForSeeMorePage="@{singleForecast}"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/_14sdp"
            android:layout_marginTop="@dimen/_28sdp"
            android:layout_marginEnd="@dimen/_14sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/see_more_highlight" />

        <TextView
            android:id="@+id/see_more_highlight"
            getWeatherStatus="@{singleForecast}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_28sdp"
            android:fontFamily="@font/roboto_medium"
            android:textSize="@dimen/_16ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/see_more_weather_image"
            tools:text="Clear" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="0dp"
            android:layout_height="@dimen/_45sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="@dimen/_36sdp"
                android:layout_height="@dimen/_36sdp"
                android:contentDescription="@string/back_button"
                android:padding="@dimen/_8sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/abc_vector_test"
                tools:ignore="PrivateResource" />

            <TextView
                android:id="@+id/current_conditions_plain_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="@string/current_conditions"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/top_line_divider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@android:drawable/divider_horizontal_dark"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>