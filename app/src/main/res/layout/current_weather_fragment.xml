<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".EachWeatherFragment">


        <ImageView
            android:id="@+id/current_weather_image"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="30dp"
            android:contentDescription="@string/weather_image"
            android:src="@drawable/partly_cloudy"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/current_temp_display_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:textSize="90sp"
            app:layout_constraintBottom_toBottomOf="@+id/current_weather_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/current_weather_image"
            android:text="24" />

        <TextView
            android:id="@+id/current_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/current_temp_display_text"
            app:layout_constraintEnd_toEndOf="@+id/current_temp_display_text"
            app:layout_constraintStart_toStartOf="@+id/current_temp_display_text"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.6"
            android:text="Today, 15:00" />


        <TextView
            android:id="@+id/current_feels_like_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/current_temp_display_text"
            app:layout_constraintTop_toBottomOf="@+id/current_temp_display_text"
            android:text="Feels like 24Â°" />

        <TextView
            android:id="@+id/current_weather_status_display_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/current_weather_image"
            app:layout_constraintStart_toStartOf="@+id/current_weather_image"
            app:layout_constraintTop_toBottomOf="@+id/current_weather_image"
            tools:text="Mostly Sunny" />

        <TextView
            android:id="@+id/current_celsius_plain_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/celsius"
            android:textSize="50sp"
            app:layout_constraintBottom_toBottomOf="@+id/current_temp_display_text"
            app:layout_constraintStart_toEndOf="@+id/current_temp_display_text"
            app:layout_constraintTop_toTopOf="@+id/current_temp_display_text"
            app:layout_constraintVertical_bias="0.26" />

        <View
            android:id="@+id/current_divider"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="80dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/current_weather_image"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/current_detail_plain_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:fontFamily="sans-serif-light"
            android:text="@string/current_details"
            android:textFontWeight="400"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/current_divider" />

        <TextView
            android:id="@+id/current_humidity_plain_text"
            style="@style/current_details_style"
            android:layout_marginTop="40dp"
            android:text="@string/humidity"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/current_detail_plain_text"
            app:layout_constraintTop_toBottomOf="@+id/current_detail_plain_text" />

        <TextView
            android:id="@+id/current_pressure_plain_text"
            style="@style/current_details_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/pressure"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/current_humidity_plain_text"
            app:layout_constraintTop_toBottomOf="@+id/current_humidity_plain_text" />

        <TextView
            android:id="@+id/current_wind_plain_text"
            style="@style/current_details_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/wind"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/current_pressure_plain_text"
            app:layout_constraintTop_toBottomOf="@+id/current_pressure_plain_text" />

        <TextView
            android:id="@+id/current_cloud_plain_text"
            style="@style/current_details_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/clouds_cover"
            app:layout_constraintStart_toStartOf="@+id/current_wind_plain_text"
            app:layout_constraintTop_toBottomOf="@+id/current_wind_plain_text" />

        <TextView
            android:id="@+id/current_humidity_display_text"
            style="@style/number_current_details_style"
            app:layout_constraintBottom_toBottomOf="@+id/current_humidity_plain_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintStart_toEndOf="@+id/current_humidity_plain_text"
            app:layout_constraintTop_toTopOf="@+id/current_humidity_plain_text"
            android:text="44%"/>

        <TextView
            android:id="@+id/current_pressure_display_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/current_pressure_plain_text"
            app:layout_constraintEnd_toEndOf="@+id/current_humidity_display_text"
            app:layout_constraintStart_toStartOf="@+id/current_humidity_display_text"
            app:layout_constraintTop_toTopOf="@+id/current_pressure_plain_text"
            android:text="1020 mBar"
            app:layout_constraintHorizontal_bias="0.6"/>

        <TextView
            android:id="@+id/current_wind_display_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/current_wind_plain_text"
            app:layout_constraintEnd_toEndOf="@+id/current_humidity_display_text"
            app:layout_constraintStart_toStartOf="@+id/current_humidity_display_text"
            app:layout_constraintTop_toTopOf="@+id/current_wind_plain_text"
            app:layout_constraintVertical_bias="0.0"
            android:text="5 km/h"
            app:layout_constraintHorizontal_bias="0.6" />

        <TextView
            android:id="@+id/current_clouds_display_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/current_cloud_plain_text"
            app:layout_constraintEnd_toEndOf="@+id/current_humidity_display_text"
            app:layout_constraintStart_toStartOf="@+id/current_humidity_display_text"
            app:layout_constraintTop_toTopOf="@+id/current_cloud_plain_text"
            android:text="7 Oktas"
            app:layout_constraintHorizontal_bias="0.6" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>