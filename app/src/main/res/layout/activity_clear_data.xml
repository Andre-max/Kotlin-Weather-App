<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark_theme_blue"
        tools:context=".clear_data.ClearDataActivity">

        <TextView
            android:id="@+id/are_you_sure_plain_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cabin"
            android:gravity="center"
            android:text="@string/are_you_sure_you_want_to_clear_data_plain_text"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_16sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/clear_data_btn"
            android:layout_width="@dimen/_220sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            app:backgroundTint="@color/dark_orange"
            android:padding="@dimen/_10sdp"
            android:text="@string/clear_data_plain_text"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="@+id/are_you_sure_plain_text"
            app:layout_constraintStart_toStartOf="@+id/are_you_sure_plain_text"
            app:layout_constraintTop_toBottomOf="@+id/are_you_sure_plain_text" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

