<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/light_theme_blue</item>
        <item name="colorPrimaryVariant">@color/light_white</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@android:color/white</item>
        <item name="colorOnSecondary">@color/dark_black</item>
        <item name="colorSurface">@color/light_theme_blue</item>
        <item name="android:textSize">@dimen/_13ssp</item>

        <item name="android:colorBackground">@color/light_theme_blue</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>

<!--        <item name="colorTertiaryContainer">#356798</item>-->
        <item name="colorTertiaryContainer">#BE2582C5</item>
    </style>


    <style name="Theme.App.Starting" parent="Theme.SplashScreen.IconBackground">
        <!-- Use windowSplashScreenAnimatedIcon to add a drawable or an animated
             drawable. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_screen</item>
        <!-- Set the theme of the Activity that follows your splash screen. -->
        <item name="postSplashScreenTheme">@style/AppTheme</item>
        <!-- Set a darkBlue background behind the splash screen icon. -->
        <item name="windowSplashScreenIconBackgroundColor">@color/dark_theme_blue</item>
        <!-- Set the splash screen background to black -->
        <item name="windowSplashScreenBackground">@color/dark_theme_blue</item>
    </style>
</resources>