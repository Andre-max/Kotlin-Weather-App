<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnSurface">@color/color_black</item>
    </style>

    <style name="DefaultLayout" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnSurface">@color/color_black</item>
    </style>

    <style name="DefaultLayout.WhiteTextColor">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="DefaultLayout.BlackTextColor">
        <item name="android:textColor">@color/dark_black</item>
    </style>

    <style name="AppTheme.WhiteTextColor">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.BlackTextColor">
        <item name="android:textColor">@color/dark_black</item>
    </style>

    <style name="current_details_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-medium</item>
<!--        <item name="android:textFontWeight">320</item>-->
        <item name="android:textSize">14sp</item>
    </style>

    <style name="number_current_details_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-light</item>
<!--        <item name="android:textFontWeight">420</item>-->
    </style>

    <style name="CustomBottomNavBarStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="colorOnSurface">@color/default_navbar_color</item>
        <item name="colorPrimary">@android:color/white</item>
    </style>

    <style name="settings_each_item_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="settings_each_item_description">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_black</item>
    </style>

</resources>